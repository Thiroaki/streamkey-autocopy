{
  "name": "streamkey-autocopy",
  "version": "1.0.1",
  "description": "Tool for VRChat",
  "main": "dist/main.js",
  "repository": {

  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "run-s compile:dev serve",
    "start:clean": "run-s clean compile:dev serve",
    "pack": "run-s clean compile:prod build",
    "compile:dev": "cross-env NODE_ENV=dev; tsc",
    "compile:prod": "cross-env NODE_ENV=prod; tsc",
    "clean": "rimraf dist/*",
    "serve": "electron .",
    "build": "electron-builder --win --x64 --dir"
  },
  "keywords": [],
  "author": "Thiroaki",
  "license": "",
  "dependencies": {
    "axios": "^0.21.1",
    "electron": "^12.0.15",
    "vrc-log-catcher": "git+ssh://git@github.com/Thiroaki/vrc-log-catcher.git"
  },
  "devDependencies": {
    "@types/node": "^14.17.6",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "cross-env": "^7.0.3",
    "electron-builder": "^22.11.7",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.5"
  },
  "build": {
    "files": [
      "dist/**/*",
      "resource/**/*"
    ],
    "win": {
      "icon": "./resource/keycopy_icon.ico",
      "target": {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    },
    "directories": {
      "output": "release"
    },
    "compression": "maximum"
  }
}
